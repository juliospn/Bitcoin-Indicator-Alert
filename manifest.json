{
    "manifest_version": 2,
    "name": "Bitcoin ",
    "version": "1.0.0",
    "description": "Esta é a minha extensão para o navegador",
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "permissions": [
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.example.com/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      },
      "default_title": "Minha Extensão",
      "default_popup": "popup.html"
    }
  }
  